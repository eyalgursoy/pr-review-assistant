{
  "name": "pr-review-assistant",
  "displayName": "PR Review Assistant",
  "description": "AI-powered PR code review with GitHub integration - sidebar panel in Source Control",
  "version": "0.18.3",
  "publisher": "pr-review",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/eyalgursoy/pr-review-assistant"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "github",
    "pull request",
    "code review",
    "ai",
    "claude",
    "gpt",
    "gemini",
    "groq"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "prReviewAssistant",
          "name": "PR Review Assistant",
          "icon": "resources/icon.png",
          "contextualTitle": "PR Review"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "prReviewAssistant",
        "contents": "Start an AI-powered PR review.\n[Start Review](command:prReview.startReview)\n[Review Local Changes](command:prReview.reviewLocalChanges)"
      }
    ],
    "commands": [
      {
        "command": "prReview.startReview",
        "title": "Start Review",
        "icon": "$(play)"
      },
      {
        "command": "prReview.reviewLocalChanges",
        "title": "Review Local Changes",
        "icon": "$(git-branch)"
      },
      {
        "command": "prReview.runAiReview",
        "title": "Run AI Review",
        "icon": "$(sparkle)"
      },
      {
        "command": "prReview.submitReview",
        "title": "Submit PR Review",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "prReview.approvePR",
        "title": "Approve PR",
        "icon": "$(check-all)"
      },
      {
        "command": "prReview.approveComment",
        "title": "Approve Comment",
        "icon": "$(check)"
      },
      {
        "command": "prReview.rejectComment",
        "title": "Reject Comment",
        "icon": "$(x)"
      },
      {
        "command": "prReview.editComment",
        "title": "Edit Comment",
        "icon": "$(edit)"
      },
      {
        "command": "prReview.clearReview",
        "title": "Clear Review",
        "icon": "$(trash)"
      },
      {
        "command": "prReview.refreshFiles",
        "title": "Refresh Files",
        "icon": "$(refresh)"
      },
      {
        "command": "prReview.showLog",
        "title": "PR Review: Show Log",
        "icon": "$(output)"
      },
      {
        "command": "prReview.selectCursorModel",
        "title": "PR Review: Select Cursor CLI Model"
      },
      {
        "command": "prReview.setApiKey",
        "title": "Set API Key (Secure)",
        "icon": "$(key)"
      },
      {
        "command": "prReview.clearApiKey",
        "title": "Clear API Key",
        "icon": "$(trash)"
      },
      {
        "command": "prReview.comment.approve",
        "title": "Approve",
        "icon": "$(check)"
      },
      {
        "command": "prReview.comment.reject",
        "title": "Reject",
        "icon": "$(x)"
      },
      {
        "command": "prReview.comment.edit",
        "title": "Edit",
        "icon": "$(edit)"
      },
      {
        "command": "prReview.comment.save",
        "title": "Save",
        "icon": "$(save)"
      },
      {
        "command": "prReview.comment.cancel",
        "title": "Cancel",
        "icon": "$(close)"
      },
      {
        "command": "prReview.comment.delete",
        "title": "Dismiss",
        "icon": "$(trash)"
      },
      {
        "command": "prReview.fixInChat",
        "title": "Fix in Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "prReview.generateSuggestion",
        "title": "Suggested Fix",
        "icon": "$(lightbulb)"
      },
      {
        "command": "prReview.viewDiff",
        "title": "View Diff",
        "icon": "$(diff)"
      },
      {
        "command": "prReview.comment.approveAll",
        "title": "Approve All Pending",
        "icon": "$(check-all)"
      },
      {
        "command": "prReview.comment.rejectAll",
        "title": "Reject All Pending",
        "icon": "$(close-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "prReview.startReview",
          "when": "view == prReviewAssistant",
          "group": "navigation@1"
        },
        {
          "command": "prReview.runAiReview",
          "when": "view == prReviewAssistant && prReview.hasFiles",
          "group": "navigation@2"
        },
        {
          "command": "prReview.submitReview",
          "when": "view == prReviewAssistant && prReview.hasApprovedComments",
          "group": "navigation@3"
        },
        {
          "command": "prReview.clearReview",
          "when": "view == prReviewAssistant && prReview.hasReview",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "prReview.approveComment",
          "when": "view == prReviewAssistant && viewItem == comment-pending",
          "group": "inline@1"
        },
        {
          "command": "prReview.rejectComment",
          "when": "view == prReviewAssistant && viewItem == comment-pending",
          "group": "inline@2"
        },
        {
          "command": "prReview.editComment",
          "when": "view == prReviewAssistant && viewItem =~ /^comment-/",
          "group": "inline@3"
        },
        {
          "command": "prReview.fixInChat",
          "when": "view == prReviewAssistant && viewItem =~ /^comment-/",
          "group": "inline@4"
        },
        {
          "command": "prReview.generateSuggestion",
          "when": "view == prReviewAssistant && viewItem =~ /^comment-/",
          "group": "inline@5"
        },
        {
          "command": "prReview.viewDiff",
          "when": "view == prReviewAssistant && viewItem =~ /^comment-/",
          "group": "inline@6"
        }
      ],
      "comments/commentThread/title": [
        {
          "command": "prReview.comment.approve",
          "group": "inline@1",
          "when": "commentController == prReviewAssistant && commentThread =~ /prReviewThread-pending/"
        },
        {
          "command": "prReview.comment.reject",
          "group": "inline@2",
          "when": "commentController == prReviewAssistant && commentThread =~ /prReviewThread-pending/"
        },
        {
          "command": "prReview.comment.delete",
          "group": "inline@3",
          "when": "commentController == prReviewAssistant"
        },
        {
          "command": "prReview.fixInChat",
          "group": "inline@4",
          "when": "commentController == prReviewAssistant"
        },
        {
          "command": "prReview.generateSuggestion",
          "group": "inline@5",
          "when": "commentController == prReviewAssistant"
        },
        {
          "command": "prReview.viewDiff",
          "group": "inline@6",
          "when": "commentController == prReviewAssistant"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "prReview.comment.approveAll",
          "group": "1_actions@1",
          "when": "commentController == prReviewAssistant"
        },
        {
          "command": "prReview.comment.rejectAll",
          "group": "1_actions@2",
          "when": "commentController == prReviewAssistant"
        }
      ],
      "comments/comment/title": [
        {
          "command": "prReview.comment.edit",
          "group": "inline@1",
          "when": "commentController == prReviewAssistant"
        }
      ],
      "comments/comment/context": [
        {
          "command": "prReview.comment.save",
          "group": "inline@1",
          "when": "commentController == prReviewAssistant && commentIsEmpty == false"
        },
        {
          "command": "prReview.comment.cancel",
          "group": "inline@2",
          "when": "commentController == prReviewAssistant"
        }
      ]
    },
    "configuration": {
      "title": "PR Review Assistant",
      "properties": {
        "prReview.aiProvider": {
          "type": "string",
          "enum": [
            "cursor-cli",
            "gemini",
            "anthropic",
            "openai",
            "groq",
            "vscode-lm",
            "none"
          ],
          "enumItemLabels": [
            "Cursor CLI (Recommended)",
            "Google Gemini (Free tier)",
            "Anthropic Claude",
            "OpenAI GPT-4",
            "Groq (Fast & Free)",
            "VS Code LM (Copilot only)",
            "Manual"
          ],
          "default": "cursor-cli",
          "description": "AI provider for code review. Cursor CLI uses your Cursor subscription! When Cursor CLI is selected, run 'PR Review: Select Cursor CLI Model' from the Command Palette to choose a model (dynamic list).",
          "enumDescriptions": [
            "Uses Cursor Agent CLI - no API key needed! Run 'PR Review: Select Cursor CLI Model' to pick a model.",
            "Google Gemini 2.5 Flash - free tier available at ai.google.dev",
            "Anthropic Claude - requires API key from console.anthropic.com",
            "OpenAI GPT-4o - requires API key from platform.openai.com",
            "Groq llama-3.3-70b - fast & free at console.groq.com",
            "VS Code Language Model API - works with GitHub Copilot (not Cursor yet)",
            "Paste AI output manually"
          ]
        },
        "prReview.aiProviderCursorModel": {
          "type": "string",
          "enum": ["Auto", "Claude 4.5 Sonnet", "Claude 4.6 Opus", "Composer 1.5", "Gemini 3 Flash", "Gemini 3 Pro", "GPT-5.2", "GPT-5.3 Codex"],
          "default": "Auto",
          "description": "Model to use with Cursor CLI (only applies when AI provider is Cursor CLI). Run 'PR Review: Select Cursor CLI Model' for the full dynamic list."
        },
        "prReview.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key (deprecated: use 'Set API Key' command for secure storage)",
          "deprecationMessage": "Use the 'PR Review: Set API Key (Secure)' command instead. Keys in settings are stored in plain text."
        },
        "prReview.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key (deprecated: use 'Set API Key' command for secure storage)",
          "deprecationMessage": "Use the 'PR Review: Set API Key (Secure)' command instead. Keys in settings are stored in plain text."
        },
        "prReview.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API key (deprecated: use 'Set API Key' command for secure storage)",
          "deprecationMessage": "Use the 'PR Review: Set API Key (Secure)' command instead. Keys in settings are stored in plain text."
        },
        "prReview.groqApiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API key (deprecated: use 'Set API Key' command for secure storage)",
          "deprecationMessage": "Use the 'PR Review: Set API Key (Secure)' command instead. Keys in settings are stored in plain text."
        },
        "prReview.githubAuth": {
          "type": "string",
          "enum": [
            "gh-cli",
            "token"
          ],
          "default": "gh-cli",
          "description": "GitHub authentication method"
        },
        "prReview.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub personal access token (if not using gh-cli)"
        },
        "prReview.gitlabUrl": {
          "type": "string",
          "default": "https://gitlab.com",
          "description": "GitLab instance URL (use https://gitlab.com for GitLab.com or your self-managed URL)"
        },
        "prReview.gitlabToken": {
          "type": "string",
          "default": "",
          "description": "GitLab personal/project access token (deprecated: use 'Set API Key' command for secure storage)",
          "deprecationMessage": "Use the 'PR Review: Set API Key (Secure)' command and choose GitLab. Tokens in settings are stored in plain text."
        },
        "prReview.bitbucketToken": {
          "type": "string",
          "default": "",
          "description": "Bitbucket app password or token (deprecated: use 'Set API Key' command for secure storage)",
          "deprecationMessage": "Use the 'PR Review: Set API Key (Secure)' command and choose Bitbucket. Tokens in settings are stored in plain text."
        },
        "prReview.bitbucketUsername": {
          "type": "string",
          "default": "",
          "description": "Bitbucket username (required for App Password auth; leave empty when using Bearer token)"
        },
        "prReview.defaultBaseBranch": {
          "type": "string",
          "default": "main",
          "description": "Default base branch for comparison"
        },
        "prReview.autoRunAi": {
          "type": "boolean",
          "default": false,
          "description": "Automatically run AI review after loading PR"
        },
        "prReview.showLogPrompt": {
          "type": "boolean",
          "default": false,
          "description": "Show 'View Log' prompt after AI review completes (useful for debugging)"
        },
        "prReview.checkoutPrBranch": {
          "type": "boolean",
          "default": true,
          "description": "Checkout PR branch when reviewing for accurate line numbers. If disabled, comments may drift if you're on a different branch."
        },
        "prReview.verboseLogging": {
          "type": "boolean",
          "default": false,
          "description": "Log diff content and AI response previews to Output. Disable for privacy."
        },
        "prReview.showResolvedOrOutdatedComments": {
          "type": "string",
          "enum": ["hide", "showStruck"],
          "default": "hide",
          "description": "Resolved or outdated PR comments: hide them, or show with strikethrough (non-actionable)."
        },
        "prReview.clearRestoreStackOnDeactivate": {
          "type": "boolean",
          "default": false,
          "description": "Clear PR branch restore stack when extension deactivates. When false, restore prompt appears on next launch."
        },
        "prReview.enableProjectDetection": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect project type, languages, and frameworks for context-aware review rules. When disabled, uses generic rules only."
        },
        "prReview.customRulesPath": {
          "type": "string",
          "default": "",
          "description": "Path to custom rules file (e.g. .pr-review-rules.json). Relative to workspace root, or absolute. Empty uses workspace root .pr-review-rules.json."
        },
        "prReview.preferredLanguageRules": {
          "type": "string",
          "default": "",
          "description": "Override detected language rules. Comma-separated list (e.g. typescript,python). Empty uses auto-detection."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish",
    "release": "git tag v$(node -p \"require('./package.json').version\") && git push origin main && git push origin v$(node -p \"require('./package.json').version\")"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18",
    "webpack": "^5.105.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@google/generative-ai": "^0.24.1",
    "@octokit/rest": "^20.0.0",
    "groq-sdk": "^0.37.0",
    "openai": "^4.77.0",
    "zod": "^3.25.76"
  }
}
